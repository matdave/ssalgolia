{
  "name": "SSAlgolia",
  "lowCaseName": "ssalgolia",
  "description": "Algolia integration for Simple Search",
  "author": "matdave",
  "version": "0.0.2-pl",
  "package": {
    "elements": {
      "plugins": [
        {
          "name": "SSAlgoliaIndexer",
          "file": "SSAlgoliaIndexer.php",
          "events": [
            "OnDocFormSave",
            "OnDocPublished",
            "OnDocUnpublished",
            "OnResourceDelete",
            "OnResourceDuplicate",
            "OnResourceUndelete"
          ]
        }
      ]
    },
    "systemSettings": [
      {
        "key": "id",
        "area": "Algolia"
      },
      {
        "key": "key",
        "area": "Algolia",
        "type": "text-password"
      },
      {
        "key": "index",
        "area": "Algolia"
      }
    ]
  }
}
